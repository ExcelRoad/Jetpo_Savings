# ===========================
# ENVIRONMENT VARIABLES TEMPLATE
# ===========================
# Copy this file to .env and fill in the values
# Never commit .env to version control!

# ===========================
# Django Core Settings
# ===========================
SECRET_KEY=your-secret-key-here-generate-new-one-for-production
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,.railway.app

# ===========================
# Database (Provided by Railway)
# ===========================
# Railway will automatically provide this
DATABASE_URL=postgresql://user:password@host:port/dbname

# ===========================
# Cloudinary (Media Storage)
# ===========================
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================
# Email Service (SendGrid)
# ===========================
# Required for django-allauth email verification
# Get API key from https://sendgrid.com/
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===========================
# Social Authentication (Optional)
# ===========================
# Google OAuth - https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth - https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ===========================
# Site Configuration
# ===========================
SITE_URL=https://yourdomain.com
SITE_NAME=Jetpo
